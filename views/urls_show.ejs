<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<body style="font-size:20px; padding:50px;">
    <!-- Add EJS code here -->
    <header>
      <% include ./partials/_header %>
    </header>
    <h4>TinyURL for <%= longURL%></h4>
    <li><%= `${shortURL}` %></li>
    <form action="/urls/<%=shortURL%>" method="POST">
      <input type="text" name="longURL" value="<%= longURL%>" placeholder="<%= longURL %>"
        style="width:500px; margin: 1em">
      <button type="submit" class="btn btn-primary" style="margin:0.1em">Update</button>
    </form>



</body>
</html>